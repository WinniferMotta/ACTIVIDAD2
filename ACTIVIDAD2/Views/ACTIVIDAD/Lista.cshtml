@model IEnumerable<ACTIVIDAD2.Models.EstudiantesViewModels>

@{
    // Define el título de la página.
    ViewData["Title"] = "Lista de Estudiantes";
}

<h2>@ViewData["Title"]</h2>

<p>
    <!-- Enlace para ir al formulario de registro de un nuevo estudiante -->
    <a asp-action="Index" class="btn btn-success">Registrar Nuevo Estudiante</a>
</p>

<!-- Tabla para mostrar la lista de estudiantes -->
<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Matrícula</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Carrera</th>
            <th>Turno</th>
            <th>Tipo de Ingreso</th>
            <th>Beca</th>
            <th>Acción</th>
        </tr>
    </thead>
    <tbody>
        <!-- Itera sobre cada estudiante en el modelo (lista de estudiantes) -->
        @foreach (var est in Model)
        {
            <tr>
                <td>@est.Matricula</td>
                <td>@est.Nombre</td>
                <td>@est.Apellido</td>
                <td>@est.Carrera</td>
                <td>@est.Turno</td>
                <td>@est.TipoIngreso</td>
                <!-- Muestra el porcentaje de beca si está becado, de lo contrario "No" -->
                <td>@(est.EstaBecado ? $"{est.PorcentajeBeca}%" : "No")</td>
                <td>
                    <!-- Enlace para editar un estudiante específico, pasando su matrícula como parámetro de ruta -->
                    <a asp-action="Editar" asp-route-matricula="@est.Matricula" class="btn btn-warning btn-sm">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
